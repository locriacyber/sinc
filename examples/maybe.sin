[type just_ [kind val]]
[type none_ [kind]]

[def just [val]
    [just_ 1 val]]

[def just.val [x]
    [just_.val x]]

[def none []
    [none_ 0]]

[def has_value [x]
    [just_.kind x]]

[def Maybe.>>= [a f]
    [if [has_value a]
        [f [just.val a]]
        a]]

[def Maybe.return [x]
    [just x]]
